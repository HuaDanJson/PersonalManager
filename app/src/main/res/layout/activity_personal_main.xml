<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llMainActivityAll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#8DEEEE"
        android:gravity="center"
        android:text="个人管理系统"
        android:textColor="#fff"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_note_personal_main_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_btn_register_false"
        android:text="记事本"
        android:textColor="#ffff00"/>

    <Button
        android:id="@+id/btnMainActivityAnalysis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_btn_register_false"
        android:text="备忘录"
        android:textColor="#ffff00"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_finance_personal_main_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_btn_register_false"
        android:text="财务管理"
        android:textColor="#ffff00"/>

    <Button
        android:id="@+id/btn_school_personal_main_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_btn_register_false"
        android:text="校园事物"
        android:textColor="#ffff00"/>


</LinearLayout>
